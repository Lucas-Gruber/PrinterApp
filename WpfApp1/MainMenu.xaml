<Page Background="White" x:Class="WpfApp1.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="523"
      Title="MainMenu">
    <Page.Resources>
        <SolidColorBrush x:Key="ButtonForeground1" Color="#FF838383"/>
    </Page.Resources>

    <StackPanel Margin="20">
        <Label>Wähle sie bitte einen Druckserver aus:</Label>
        <RadioButton x:Name="rb_sankte" GroupName="printserver" Checked="rb_se_Checked">Sanktelisabeth</RadioButton>
        <RadioButton x:Name="rb_schul" GroupName="printserver" Checked="rb_schul_Checked">Schul03</RadioButton>

        <Button Command="NavigationService.Navigate(SanktelisabethServerMenu.xaml)"></Button>
        <local:NavButton x:Name="btn_accept" Click="btn_accept_Click" IsEnabled="False" IsDefault="True" Text="Bestätige" Margin="20" NavUri="/SanktelisabethServerMenu.xaml"  />
        <Label x:Name="lbl_server" />
    </StackPanel>
</Page>
