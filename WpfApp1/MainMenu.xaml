<Page Background="White" x:Class="WpfApp1.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="523"
      Title="MainMenu">

    <StackPanel Margin="20">
        <Label>Wähle sie bitte einen Druckserver aus:</Label>
        <RadioButton x:Name="rb_sankte" GroupName="printserver" Checked="rb_server_checked">Sanktelisabeth</RadioButton>
        <RadioButton x:Name="rb_schul" GroupName="printserver" Checked="rb_server_checked">Schul03</RadioButton>

        <Button x:Name="btn_next" Click="Button_Click" Margin="20" IsEnabled="False" IsDefault="True">Bestätige</Button>
        <Label x:Name="lbl_server" />
    </StackPanel>
</Page>
